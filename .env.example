# Environment Configuration for Education Dashboard
# Copy this file to .env and update with your values

# Flask Environment
FLASK_ENV=development  # development or production

# Secret Key for Session Management
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
# For development (SQLite): leave blank or use sqlite:///education_dashboard.db
# For production (PostgreSQL): use full connection string
# Example PostgreSQL: postgresql://username:password@host:port/database
DATABASE_URL=

# Login Configuration
# Set to True to disable authentication (for development/testing only)
LOGIN_DISABLED=False

# Default Admin Credentials (Change immediately after first login!)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=admin123
